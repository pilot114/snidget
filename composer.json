{
    "name": "wshell/snidget",
    "description": "snidget framework",
    "type": "project",
    "license": "MIT",
    "require": {
        "ext-pdo": "*",
        "ext-mbstring": "*",
        "ext-pcntl": "*",
        "psr/log": "*",
        "psr/simple-cache": "^3.0",
        "psr/container": "^2.0",
        "psr/http-message": "^1.0",
        "psr/http-server-middleware": "^1.0"
    },
    "require-dev": {
        "ext-xdebug": "*",
        "phpstan/phpstan": "^1.10",
        "phploc/phploc": "^7.0",
        "phpunit/phpunit": "^9.5",
        "league/commonmark": "^2.4"
    },
    "scripts": {
        "phpstan": "phpstan analyse -c phpstan.neon",
        "tests": "XDEBUG_MODE=coverage phpunit tests --coverage-html tests/coverage --coverage-filter src --order-by random -v --bootstrap tests/bootstrap.php",
        "phploc": "phploc src | grep 'LOC'",
        "hook-install" : "git config core.hooksPath ./.git-hooks"
    },
    "autoload": {
        "psr-4": {
            "Snidget\\": "src",
            "App\\": "App"
        },
        "files": ["src/functions.php"]
    }
}
