{
    "name": "wshell/snidget",
    "description": "snidget framework",
    "type": "project",
    "license": "MIT",
    "require": {
        "ext-pdo": "*",
        "ext-mbstring": "*",
        "ext-pcntl": "*",
        "psr/log": "*",
        "psr/simple-cache": "^3.0",
        "psr/container": "^2.0",
        "psr/http-message": "^1.0",
        "psr/http-server-middleware": "^1.0"
    },
    "require-dev": {
        "ext-xdebug": "*",
        "phpstan/phpstan": "^1.10",
        "rector/rector": "^0.15",
        "phploc/phploc": "^7.0",
        "phpunit/phpunit": "^9.6",
        "league/commonmark": "^2.4"
    },
    "scripts": {
        "hook-install" : "git config core.hooksPath ./.git-hooks",
        "tests"        : "XDEBUG_MODE=coverage phpunit tests --coverage-html tests/coverage --coverage-filter src --order-by random -v --bootstrap tests/bootstrap.php",
        "phploc"       : "phploc src | grep 'LOC'",
        "phpstan"      : "phpstan analyse -c phpstan.neon",
        "rector-lint"  : "rector process --dry-run",
        "rector-fix"   : "rector process"
    },
    "autoload": {
        "psr-4": {
            "Snidget\\": "src",
            "App\\": "App"
        },
        "files": ["src/functions.php"]
    }
}
