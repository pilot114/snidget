{
    "name": "wshell/snidget",
    "description": "snidget framework",
    "type": "project",
    "require": {
        "ext-pdo": "*",
        "ext-mbstring": "*",
        "ext-pcntl": "*",
        "psr/log": "*",
        "psr/simple-cache": "^3.0",
        "psr/container": "^2.0",
        "psr/http-message": "^1.0",
        "psr/http-server-middleware": "^1.0"
    },
    "require-dev": {
        "ext-xdebug": "*",
        "phpstan/phpstan": "^1.6",
        "phploc/phploc": "^7.0",
        "brainmaestro/composer-git-hooks": "^2.8",
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "phpstan": "phpstan analyse -c phpstan.neon",
        "tests": "XDEBUG_MODE=coverage phpunit tests --testdox --coverage-html tests/coverage --coverage-filter src --process-isolation --order-by random -v --bootstrap tests/bootstrap.php",
        "phploc": "phploc src | grep 'LOC'",

        "start_sync": "cd public && sudo php -S 127.0.0.1:99",
        "start_async": "docker-compose up"
    },
    "autoload": {
        "psr-4": {
            "Snidget\\": "src",
            "App\\": "app"
        },
        "files": ["src/utils.php"]
    },
    "extra": {
        "hooks": {
            "config": {
                "stop-on-failure": [
                    "pre-commit"
                ]
            },
            "pre-commit": [
                "echo committing as $(git config user.name)",
                "composer phpstan",
                "composer tests",
                "composer phploc"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "brainmaestro/composer-git-hooks": true
        }
    }
}
